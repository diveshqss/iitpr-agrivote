{
  "name": "backend",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "cmd /c \"py -3.10 main.py\""
      }
    },
    "serve:dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "cmd /c \"uvicorn main:app --reload --host 0.0.0.0 --port 8001\"",
        "env": {
          "ENV": "development"
        }
      }
    },
    "serve:prod": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "cmd /c \"py -3.10 main.py\"",
        "env": {
          "ENV": "production"
        }
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "cmd /c \"py -m pip install -r requirements.txt\""
      }
    }
  }
}
